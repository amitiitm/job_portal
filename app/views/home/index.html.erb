<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>CSV Upload</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a>CSV Upload</a>
      </li>
      <li class="active">
        <strong>CSV</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<% if @message.present? %>
    <div class="alert alert-info alert-dismissable">
      <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
      <%= @message %>
    </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Upload File</h5>
      </div>
      <div class="ibox-content">

          <%= form_tag upload_home_index_path, multipart: true,class: "form-inline" do %>
              <%= file_field_tag :file,:class => "form-control col-xs-3" %>
              <%= submit_tag "Upload",:class=>"btn btn-white" %>
          <% end %>

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Products Data</h5>
      </div>
      <div class="ibox-content">

        <table class="table table-bordered">
          <thead>
          <tr>
            <th>Number</th>
            <th>Description</th>
            <th>Status</th>
            <th>Category</th>
            <th>Sales Type</th>
          </tr>
          </thead>
          <tbody>
            <% @products.each do |product|%>
                      <tr>
                        <td><%= product.number %></td>
                        <td><%= product.description %></td>
                        <td><%= product.status %></td>
                        <td><%= product.category %></td>
                        <td><%= product.sales_type %></td>
                      </tr>
            <% end %>
          </tbody>
          <%= will_paginate @products %>
        </table>

      </div>
    </div>
  </div>
</div>